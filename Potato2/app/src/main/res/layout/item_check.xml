<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/line_bg_gray_sharp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_check_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/text_gray_dark"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_check_name"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/dp_px16"
        android:paddingRight="@dimen/dp_px16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right">

            <Button
                android:id="@+id/btn_item_check_sub"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/btn_green_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_px16"
            android:paddingRight="@dimen/dp_px16">

            <TextView
                android:id="@+id/tv_item_check_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line_bg_gray_normal_sharp"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left">

            <Button
                android:id="@+id/btn_item_check_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/btn_red_bg" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>