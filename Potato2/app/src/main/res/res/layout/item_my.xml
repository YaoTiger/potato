<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@drawable/line_bg_gray_sharp"
    android:layout_height="50dp">
    <ImageView android:id="@+id/iv_item_left" android:layout_width="17dp"
        android:layout_height="17dp" android:layout_alignParentLeft="true"
        android:background="@drawable/my_about_us" android:layout_marginLeft="20dp"
        android:layout_centerVertical="true" android:contentDescription="@string/app_name" />


    <TextView android:id="@+id/tv_item_title" android:layout_width="wrap_content"
        android:layout_height="50dp" android:layout_toRightOf="@+id/iv_item_left"
        android:layout_toLeftOf="@+id/iv_item_right" android:layout_marginLeft="10dp"
        android:gravity="left|center_vertical" android:singleLine="true"
        android:layout_centerVertical="true" android:textColor="@color/text_gray_dark"
        android:textSize="16dp" />


    <ImageView android:id="@+id/iv_item_right" android:layout_alignParentRight="true"
        android:layout_width="6dp" android:layout_height="11dp"
        android:background="@drawable/arrow_right" android:layout_marginRight="30dp"
        android:layout_centerVertical="true" android:contentDescription="@string/app_name" />
</RelativeLayout>