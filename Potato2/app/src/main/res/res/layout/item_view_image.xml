<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/line_gray_normal" android:padding="5dp">

            <ImageView android:id="@+id/iv_Image" android:layout_width="80dp"
                android:layout_height="80dp" android:contentDescription="@string/app_common_title"
                android:src="@drawable/camera_default" />

            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:layout_marginLeft="6dp" android:orientation="vertical">

                <LinearLayout android:id="@+id/rl_Image" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_px22" android:baselineAligned="false"
                    android:gravity="center" android:orientation="horizontal">

                    <TextView android:id="@+id/textView1" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="图片类型：" />

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:gravity="center">

                        <CheckBox android:id="@+id/cb_Image_sample" android:layout_width="20dp"
                            android:layout_height="20dp" android:layout_marginRight="5dp"
                            android:background="@drawable/cb_selected" android:button="@null"
                            android:checked="true" />

                        <TextView android:id="@+id/tv_Image_sample"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="@string/add_img_sample"
                            android:textColor="@color/text_gray_dark" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:gravity="center">

                        <CheckBox android:id="@+id/cb_Image_common" android:layout_width="20dp"
                            android:layout_height="20dp" android:layout_marginRight="5dp"
                            android:background="@drawable/cb_no_selected" android:button="@null"
                            android:checked="false" />

                        <TextView android:id="@+id/tv_Image_common"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="@string/add_img_common"
                            android:textColor="@color/text_gray_dark" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                    <TextView android:id="@+id/textView2" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:text="照片备注：" />

                    <EditText android:id="@+id/et_Image" android:layout_width="match_parent"
                        android:layout_height="fill_parent" android:layout_weight="1"
                        android:ems="10" android:gravity="top|left"
                        android:background="@drawable/et_content_bg" android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>