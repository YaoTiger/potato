<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_task_part" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@drawable/line_bg_gray"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="@dimen/dp_px18TO19">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:singleLine="true" android:gravity="center_vertical"
            android:textColor="@color/text_gray_dark" android:text="@string/task_center_item_type"
            android:textSize="14dp" />

        <TextView android:id="@+id/tv_item_task_part_type" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="14dp"
            android:textColor="@color/text_gray" android:textSize="14dp" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/line_gray_light" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="@dimen/dp_px18TO19">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:singleLine="true" android:gravity="center_vertical"
            android:textColor="@color/text_gray_dark" android:text="@string/task_center_item_time"
            android:textSize="14dp" />

        <TextView android:id="@+id/tv_item_task_part_date" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="14dp"
            android:textColor="@color/bg_red" android:textSize="14dp" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/line_gray_light" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="@dimen/dp_px18TO19">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:singleLine="true" android:gravity="center_vertical"
            android:textColor="@color/text_gray_dark" android:text="@string/task_center_item_code"
            android:textSize="14dp" />

        <TextView android:id="@+id/tv_item_task_part_code" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="14dp"
            android:textColor="@color/text_gray" android:textSize="14dp" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/line_gray_light" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="@dimen/dp_px18TO19">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:singleLine="true" android:gravity="center_vertical"
            android:textColor="@color/text_gray_dark"
            android:text="@string/task_center_item_company" android:textSize="14dp" />

        <TextView android:id="@+id/tv_item_task_part_company" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="14dp"
            android:textSize="14dp" android:textColor="@color/text_gray" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/line_gray_light" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="@dimen/dp_px18TO19">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:singleLine="true" android:gravity="center_vertical" android:textSize="14dp"
            android:textColor="@color/text_gray_dark"
            android:text="@string/task_center_item_area" />

        <TextView android:id="@+id/tv_item_task_part_area" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="14dp"
            android:textSize="14dp" android:textColor="@color/text_gray" />
    </LinearLayout>


</LinearLayout>