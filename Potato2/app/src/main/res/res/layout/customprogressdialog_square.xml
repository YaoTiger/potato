<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/transparent" android:gravity="center">

    <RelativeLayout android:layout_width="@dimen/dp_px290" android:layout_height="@dimen/dp_px290"
        android:gravity="center" android:background="@drawable/progress_dialog_bg">

        <ImageView android:id="@+id/loadingImageView" android:layout_width="@dimen/dp_px96"
            android:layout_height="@dimen/dp_px96" android:layout_above="@+id/id_tv_loadingmsg"
            android:layout_marginTop="@dimen/dp_px34" android:background="@drawable/progress_round"
            android:layout_centerInParent="true"
            android:contentDescription="@string/id_tv_loadingmsg" />

        <TextView android:id="@+id/id_tv_loadingmsg" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:gravity="center" android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_px34" android:text="@string/id_tv_loadingmsg"
            android:textColor="#bfbfbf" android:textSize="@dimen/dp_px30" />
    </RelativeLayout>

</RelativeLayout>